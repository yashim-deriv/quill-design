{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.stories.tsx",
    "src/**/*.stories.ts",
    "./rollup.config.ts",
    "./jest.config.ts"
  ]
}
